		script(type="text/javascript").
			function submitLink() {
				console.log('falus');
				$.ajax({
					url: "/submitPost",
					type: 'POST',
					async: true,
					dataType: 'json',					
					data: {"link": document.getElementById("linkInput").value, "tag": document.getElementById("tagInput").value},
					success: function(response) {
						console.log("success");						
					},
					error: function(xhr) {
						console.log("Error");
					}
				});      
			}

	body		
		h1.greeting Submit a link
		div.link
			label.linkLabel Link: 
			input#linkInput
		p
		div.tag
			label.linkTag Category: 
			input#tagInput
		p
		div.submit(onclick='submitLink()')
			button.submitButton Submit